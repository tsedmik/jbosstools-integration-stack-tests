<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jboss.tools</groupId>
		<artifactId>parent</artifactId>
		<version>4.4.4.Final</version>
	</parent>
	<groupId>org.jboss.tools</groupId>
	<artifactId>integration-stack-tests</artifactId>
	<version>4.4.0-SNAPSHOT</version>
	<name>integration-stack-tests.all</name>
	<packaging>pom</packaging>
	<properties>
		<tycho.scmUrl>scm:git:https://github.com/jbosstools/jbosstools-integration-stack-tests.git</tycho.scmUrl>
		<jbosstools.url>http://download.jboss.org/jbosstools</jbosstools.url>
		<jbtis.tp.version>4.4.3.Final</jbtis.tp.version>
		<jbtis.repo>staging</jbtis.repo>
		<reddeer.site>${jbosstools.url}/neon/stable/updates/reddeer/1.2.1/</reddeer.site>
		<orbit.site>${jbosstools.url}/updates/requirements/orbit/R20170307180635/</orbit.site>
		<fuse.site>${jbosstools.url}/neon/integration/updates/integration-stack/fuse-tooling/9.2.0.CI/</fuse.site>
		<switchyard.site>${jbosstools.url}/neon/integration/updates/integration-stack/switchyard/2.3.1.CI/</switchyard.site>
		<skipRequirements>${skipTests}</skipRequirements>
		<!-- Need to specify a stable version of tycho plugin -->
		<jbossTychoPluginsVersion>0.26.0</jbossTychoPluginsVersion>
		<!-- Get rid of the enforcer rule -->
		<BUILD_ALIAS>CI</BUILD_ALIAS>
	</properties>
	<modules>
		<module>plugins</module>
		<module>tests</module>
		<module>site</module>
	</modules>
	<repositories>
		<!--JBTIS Repository-->
		<repository>
			<id>jbtis-44-staging</id>
			<url>${jbosstools.url}/neon/staging/updates/integration-stack/</url>
			<layout>p2</layout>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<!-- JBTIS Repository (early access) -->
		<repository>
			<id>jbtis-44-staging-ea</id>
			<url>${jbosstools.url}/neon/staging/updates/integration-stack/earlyaccess</url>
			<layout>p2</layout>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<!-- RedDeer Update Site -->
		<repository>
			<id>reddeer-site</id>
			<url>${reddeer.site}</url>
			<layout>p2</layout>
		</repository>
		<!-- Eclipse Orbit Update Site -->
		<repository>
			<id>orbit-site</id>
			<url>${orbit.site}</url>
			<layout>p2</layout>
		</repository>
		<!-- JBoss Nexus -->
		<repository>
			<id>jboss-public-repository-group</id>
			<name>JBoss Public Repository Group</name>
			<url>http://repository.jboss.org/nexus/content/groups/public/</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<!-- JBTIS Target Platform -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tychoVersion}</version>
				<configuration>
					<target>
						<artifact>
							<groupId>org.jboss.tools.integration-stack</groupId>
							<artifactId>target-platform</artifactId>
							<version>${jbtis.tp.version}</version>
							<type>target</type>
							<classifier>base</classifier>
						</artifact>
						<artifact>
							<groupId>org.jboss.tools.integration-stack</groupId>
							<artifactId>target-platform</artifactId>
							<version>${jbtis.tp.version}</version>
							<type>target</type>
							<classifier>base-ea</classifier>
						</artifact>
					</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tychoVersion}</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>staging</id>
			<properties>
				<jbtis.repo>staging</jbtis.repo>
			</properties>
		</profile>
		<profile>
			<id>development</id>
			<properties>
				<jbtis.repo>development</jbtis.repo>
			</properties>
		</profile>
		<profile>
			<id>stable</id>
			<properties>
				<jbtis.repo>stable</jbtis.repo>
			</properties>
		</profile>
		<profile>
			<id>ci</id>
			<properties>
				<jbtis.repo>staging</jbtis.repo>
			</properties>
			<repositories>
				<repository>
					<id>fuse-9.2.0.CI</id>
					<url>${fuse.site}</url>
					<layout>p2</layout>
				</repository>
				<repository>
					<id>switchyard-2.4.0.CI</id>
					<url>${switchyard.site}</url>
					<layout>p2</layout>
				</repository>
			</repositories>
		</profile>
	</profiles>
</project>
